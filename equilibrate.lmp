clear
units         metal
dimension     3
boundary     p p p
atom_style	    charge

#atom_modify map array
variable dt equal 0.0005#1ps units

#read_data test10k.data

read_data data/SilicaCrystal3k.data


pair_style	    reaxff NULL#/c lmp_control.lmp
pair_coeff	    * * potential/SiOH.reax Si O H
#Pair style reaxff requires use of exactly one of the fix qeq/reaxff or fix qeq/shielded or fix acks2/reaxff commands 

#delete_atoms overlap 0.1 all all

neighbor        2 bin
neigh_modify    every 10 delay 0 check no

timestep ${dt}

thermo 10
dump d1 all atom 10 data-topcon.dump


fix r1 all qeq/reax 1 0.0 10.0 1e-6 reaxff


velocity all create 20.0 4928459 rot yes dist gaussian
#fix r1 all qeq/shielded 1 10.0 1.0e-6 100 reaxff
run 0
unfix r1
#fix f1 all temp/berendsen 20.0 20.0 100
#fix 1 all press/berendsen iso 0.0 0.0 100.0

#run 200



write_data test10k.data


# fix r1 all qeq/reax 1 0.0 10.0 1e-6 reaxff
fix f2 all nve/limit .01
#fix 1 all press/berendsen iso 0.0 0.0 100.0
run 100


#write_data test10k.data
unfix f2
fix f2 all nvt temp 20 20 .01 
run 100
