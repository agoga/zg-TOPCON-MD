variable dt equal 0.001

#region sim block $(-v_boxdim2) $(v_boxdim/2) $(-v_boxdim/2) $(v_boxdim/2) $(-v_boxdim/2) $(v_boxdim/2) 
region sim block 0 $(v_boxdim) 0 $(v_boxdim) 0 $(v_boxdim)
create_box 3 sim


create_atoms 3 single 2.6 2.6 2.6
create_atoms 2 single 1.5 1.5 1.5
create_atoms 2 single 4 4 4


