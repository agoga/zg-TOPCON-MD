mass         1 1.00784 #H
mass         2 15.9991 #O
mass         3 28.0855 #Si


pair_style	    reaxff  topcon.control
pair_coeff	    * * potential/HOSi.reax Si O H


thermo 10
neighbor        2 bin
neigh_modify    every 10 delay 0 check no

timestep $(dt)
dump d1 all custom 10 creatextal.dump id type q x y z ix iy iz mass element vx vy vz
dump_modify d1 element H O Si

#fix 1 all nve
fix r1 all qeq/reax 1 0.0 10.0 1e-6 reaxff
