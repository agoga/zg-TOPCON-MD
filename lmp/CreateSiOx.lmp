
clear
units         real
dimension     3
boundary    p p p
atom_style  charge

#atom_modify map array
variable dt equal .5

lattice diamond 5.43


# region left block -3 -.75 -2 2 -2 2
# region right block -.75 3 -2 2 -2 2
# region sim union 2 left right

region left block -2 1 -2 2 -2 2
region right block 1 3 -2 2 -2 2
region sim union 2 left right

create_box 3 sim

create_atoms 3 region left

lattice fcc 3.2

create_atoms 2 region right


mass         1 1.00784 #H
mass         2 15.9991 #O
mass         3 28.0855 #Si

pair_style	    reaxff potential/topcon.control
pair_coeff	    * * potential/ffield_Nayir_SiO_2019.reax H O Si
#Pair style reaxff requires use of exactly one of the fix qeq/reaxff or fix qeq/shielded or fix acks2/reaxff commands 


neighbor        2 bin
neigh_modify    every 10 delay 0 check no

timestep ${dt}


# compute t1 all temp
# compute p1 all pressure t1

thermo 1000
thermo_style custom step time temp etotal pe press ke vol

dump d1 all custom 100 ${output_folder}silicaanneal.dump id type q x y z ix iy iz mass element vx vy vz
dump_modify d1 element H O Si

velocity all create 1000.0 4928459 rot yes dist gaussian

#qeq/reax uses the Rappe and Goddard QEq technique which was used in the potential in Fogarty2010(p2) that this current potential is. based on 
fix r1 all qeq/reax 1 0.0 10.0 1e-6 reaxff

group gSi type 3
delete_atoms overlap 2 gSi all

group Silicon type 3
group Oxygen type 2

 
print "$(count(Oxygen)/count(Silicon))"


min_style hftn
minimize 1.0e-5 1.0e-5 1000 1000


#heat way the f up
fix f1 all nvt temp 1000 1000 100
run $(30000*(1/v_dt))#divide by timestep to make the run time in fs
unfix f1

write_data ${output_folder}SiOxHot.data

#cool down rapidly
# fix f1 all nvt temp 2000 2000 100
# run $(2000*(1/v_dt))#divide by timestep to make the run time in fs
# unfix f1

fix f1 all nvt temp 300 300 100
run $(2000*(1/v_dt))#divide by timestep to make the run time in fs
unfix f1

fix f1 all npt temp 300 300 100 aniso 1 1 5000
run $(2000*(1/v_dt))#divide by timestep to make the run time in fs
unfix f1

write_data ${output_folder}SiOx.data


print 'done'





